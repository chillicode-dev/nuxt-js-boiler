{
  "name": "nuxt-js-boiler",
  "version": "1.0.1",
  "scripts": {
    "dev": "npm-run-all -p app:dev storybook:dev",
    "app:dev": "nuxt --port 3000",
    "app:build": "nuxt build",
    "app:generate": "nuxt generate",
    "storybook:dev": "start-storybook --quiet --ci --port 3001 --static-dir ./static",
    "storybook:build": "build-storybook --quiet",
    "eslint:inspect": "eslint \"./**/*.{vue,js,jsx}\" --ignore-path .gitignore .",
    "eslint:fix": "npm run eslint:inspect -- --fix",
    "stylelint:inspect": "stylelint \"./**/*.{vue,css,scss}\" \"!./styles/vendor/**\" --ignore-path .gitignore",
    "stylelint:fix": "npm run stylelint:inspect -- --fix",
    "prettier:inspect": "prettier --check \"./**/*.{js,jsx,vue,json,css,scss}\" --ignore-path .gitignore",
    "prettier:fix": "prettier --write \"./**/*.{js,jsx,vue,json,css,scss}\" --ignore-path .gitignore",
    "linters:inspect": "npm-run-all -p prettier:inspect stylelint:inspect eslint:inspect",
    "linters:fix": "npm-run-all -p prettier:fix stylelint:fix eslint:fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run linters:fix"
    }
  },
  "dependencies": {
    "core-js": "^3.8.2",
    "is-in-browser": "^1.1.3",
    "nuxt": "^2.14.12",
    "query-string": "^6.13.8",
    "vue": "^2.6.12"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@nuxtjs/eslint-config": "^5.0.0",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@nuxtjs/style-resources": "^1.0.0",
    "@nuxtjs/stylelint-module": "^4.0.0",
    "@storybook/addon-actions": "^6.1.15",
    "@storybook/addon-essentials": "^6.1.15",
    "@storybook/addon-links": "^6.1.15",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/vue": "^6.1.15",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.0.1",
    "csso-webpack-plugin": "^2.0.0-beta.1",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-nuxt": "^2.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.4.1",
    "fibers": "^5.0.0",
    "husky": "^4.3.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "sass": "^1.32.5",
    "sass-loader": "^10.1.1",
    "style-loader": "^2.0.0",
    "stylelint": "^13.9.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-prettier": "^1.1.2",
    "stylelint-scss": "^3.18.0",
    "templateman": "0.0.5",
    "vue-svg-loader": "^0.16.0"
  }
}
